<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="5" vgap="5"
          xmlns="http://javafx.com/javafx/8.0.121" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
    <stylesheets>
        <URL value="@kalkulator.css"/>
    </stylesheets>
    <children>
        <Button fx:id="mod" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#remainder"
                text="\%" GridPane.rowIndex="1"/>
        <Button fx:id="btn8" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#osam" text="8"
                GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="btn7" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#sedam" text="7"
                GridPane.rowIndex="2"/>
        <Button fx:id="btn1" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#jedan" text="1"
                GridPane.rowIndex="4"/>
        <Button fx:id="btn5" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#pet" text="5"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="btn4" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#cetiri"
                text="4" GridPane.rowIndex="3"/>
        <Button fx:id="kroz" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#dijeljenje"
                text="/" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="puta" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#mnozenje"
                text="x" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button fx:id="btn9" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#devet" text="9"
                GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Button fx:id="btn6" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#sest" text="6"
                GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Button fx:id="minus" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#minus"
                text="-" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Button fx:id="plusBtn" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#plus"
                text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2"/>
        <Button fx:id="btn2" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#dva" text="2"
                GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button fx:id="btn3" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#tri" text="3"
                GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <Button fx:id="equalsBtn" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#jednako"
                text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.rowSpan="2"/>
        <Button fx:id="dotBtn" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#tacka"
                text="." GridPane.columnIndex="2" GridPane.rowIndex="5"/>
        <Button fx:id="btn0" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#nula" text="0"
                GridPane.columnSpan="2" GridPane.rowIndex="5"/>
        <Label fx:id="display" text="${controller.rezultat}" maxHeight="Infinity" maxWidth="Infinity"
               GridPane.columnSpan="4"/>

    </children>
</GridPane>